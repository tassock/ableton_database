= form_for @library_song do |f|
  -if @library_song.errors.any?
    #errorExplanation.error
      %h2= "#{pluralize(@library_song.errors.count, "error")} prohibited this library_song from being saved:"
      %ul
        - @library_song.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :bpm
    = f.text_field :bpm
  .field
    = f.label :key
    = f.text_field :key
  .field
    = f.label :major
    = f.text_field :major
  .actions
    = f.submit 'Save'